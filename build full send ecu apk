name: Build Full Send ECU APK

# Trigger the build on push to main branch
on:
  push:
    branches:
      - main
  workflow_dispatch:  # Allows manual trigger from GitHub UI

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    # Step 1: Checkout the repo
    - name: Checkout Repo
      uses: actions/checkout@v3

    # Step 2: Setup JDK 17
    - name: Setup Java JDK 17
      uses: actions/setup-java@v3
      with:
        java-version: 17
        distribution: temurin

    # Step 3: Build APK using Gradle
    - name: Build Full Send ECU APK
      run: |
        chmod +x ./gradlew
        ./gradlew clean
        ./gradlew assembleDebug

    # Step 4: Upload APK as artifact
    - name: Upload APK
      uses: actions/upload-artifact@v3
      with:
        name: FullSendECU-debug.apk
        path: app/build/outputs/apk/debug/FullSendECU-debug.apk